<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/small_margin"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contact_height">

    <ImageView
        android:id="@+id/friendAvatar"
        android:layout_width="@dimen/chat_avatar"
        android:layout_height="@dimen/chat_avatar"
        android:layout_marginStart="16dp"
        android:src="@drawable/avatar_image_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/friendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/msg_size"
            tools:text="TextView" />

        <TextView
            android:id="@+id/friendProfession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_marginStart="@dimen/small_margin"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size"
            tools:text="TextView" />
    </LinearLayout>

</LinearLayout>